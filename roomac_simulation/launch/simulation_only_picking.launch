<launch>
<!-- Gazebo -->
  <include file="$(find roomac_simulation)/launch/gazebo.launch">
    <arg name="gazebo_gui" value="true" />
    <arg name="world_name" value="$(find roomac_simulation)/worlds/small_house.world" />
    <arg name="start_x" value="4.30" />
    <arg name="start_y" value="-2.03" />
  </include>

<!-- Description -->
  <include file="$(find roomac_description)/launch/description_simulation.launch"/>

<!-- Roomac scripts -->
  <include file="$(find roomac_autonomous_manipulation)/launch/picking_object_manager.launch">
    <arg name="simulation" value="true" />
  </include>
  <include file="$(find roomac_autonomous_manipulation)/launch/object_detection.launch" />

<!-- ARtag -->
  <include file="$(find roomac_ar_tag)/launch/roomac_ar_tag.launch">
    <arg name="simulation" value="true" />
  </include>

<!-- MoveIt -->
  <include file="$(find roomac_moveit)/launch/roomac_moveit.launch">
    <arg name="gazebo" value="true" />
  </include>

<!-- RViz -->
  <include file="$(find roomac_moveit)/launch/rviz_moveit.launch">
    <arg name="rviz_config" value="$(find roomac_moveit)/rviz/moveit.rviz" />
    <arg name="debug" value="false" />
  </include>

</launch>