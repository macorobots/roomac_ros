{
	// "image": "roomac:latest",
	"dockerFile": "Dockerfile",
	"runArgs": [
		"--network=host",
		"--volume=/tmp/.X11-unix:/tmp/.X11-unix",
		"--runtime=nvidia",
		"--privileged",
		"--volume=/dev:/dev",
		"--volume=/run/udev/control:/run/udev/control",
		"--name=roomac_devcontainer",
		"--env=DISPLAY=${localEnv:DISPLAY}",
		"--env=NVIDIA_VISIBLE_DEVICES=all",
		"--env=NVIDIA_DRIVER_CAPABILITIES=all",
		"--volume=${localWorkspaceFolder}/rosbags:/home/roomac/rosbags",
		"--volume=roomac_data:/home/roomac/roomac_data",
	],
	"workspaceMount": "src=${localWorkspaceFolder}/../..,dst=/home/roomac/catkin_ws/,type=bind",
	"workspaceFolder": "/home/roomac/catkin_ws/src/roomac_ros",
	"extensions": [
		"ms-azuretools.vscode-docker",
		"ms-iot.vscode-ros",
		"ms-python.python",
		"ms-python.vscode-pylance",
		"ms-vscode.cpptools",
		"redhat.vscode-yaml",
		"smilerobotics.urdf",
		"twxs.cmake",
		"yzhang.markdown-all-in-one",
		"eamodio.gitlens",
		"aaron-bond.better-comments",
		"njpwerner.autodocstring",
		"redhat.vscode-xml"
	],
	"remoteUser": "roomac",
}