<launch>
  <arg name="picking_correction_enabled" default="false" />

  <include file="$(find roomac_autonomous_manipulation)/launch/real_picking.launch" />

  <include file="$(find roomac_autonomous_manipulation)/launch/picking_object_manager.launch">
    <arg name="simulation" value="false" />
  </include>

  <include if="$(arg picking_correction_enabled)" file="$(find roomac_autonomous_manipulation)/launch/picking_correction.launch" />

  <include file="$(find roomac_autonomous_manipulation)/launch/object_detection.launch" />

  <arg name="rvizconfig" default="$(find roomac_move_base)/rviz/rviz_move_base.rviz" />
  <node name="rviz_move_base" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" />

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <rosparam param="source_list">["/arm_position_controller/joint_states_arm_stub", "/wheel_joint_publisher/joint_states_wheels"]</rosparam>
    <param name="rate" type="double" value="10.0" />
  </node>
</launch>